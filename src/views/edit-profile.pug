extends base

block content 
    if (errorMessage)
        span=errorMessage
    img(src="/"+loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", name="avatar", id="avatar", accept="image/*")
        input(name="name", type="text", value=loggedInUser.name)
        input(name="email", type="email", value=loggedInUser.email)
        input(name="username", type="text", value=loggedInUser.username)
        input(name="location", type="text", value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        
        if !loggedInUser.githubId
            hr
            a(href="edit-password") Change Password &rarr;